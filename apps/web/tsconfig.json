{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/styles/*": ["./styles/*"],
      "@/app/*": ["./app/*"],
      "@/utils/*": ["./utils/*"],
      "@aether/ui": ["../../packages/ui/src/index.ts"],
      "@aether/ui/*": ["../../packages/ui/src/*"],
      "@aether/ai-engine": ["../../packages/ai-engine/index.ts"],
      "@aether/ai-engine/*": ["../../packages/ai-engine/*"],
      "@aether/templates": ["../../packages/templates/src/index.ts"],
      "@aether/templates/*": ["../../packages/templates/src/*"],
      "@aether/component-registry": ["../../packages/component-registry/src/index.ts"],
      "@aether/component-registry/*": ["../../packages/component-registry/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}