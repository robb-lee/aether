{
  "root": true,
  "extends": ["next", "prettier"],
  "plugins": ["@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "@next/next/no-html-link-for-pages": "off",
    "react/jsx-key": "off"
  },
  "settings": {
    "next": {
      "rootDir": "apps/web/"
    }
  }
}